<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".choosesafty">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_dealingwithfires"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_button"
            android:layout_below="@+id/header_id"
            android:layout_alignParentStart="true"
            android:layout_marginStart="184dp"
            android:layout_marginTop="188dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_button_master"
            android:fontFamily="@font/convergence"
            android:padding="5dp"
            android:text="Dealing with fires"
            android:textAllCaps="false"
            android:textColor="@color/text2"
            android:textSize="@dimen/text_size_button"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_medicalsaftey"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_button"
            android:layout_below="@+id/header_id"
            android:layout_alignParentStart="true"
            android:layout_marginStart="190dp"
            android:layout_marginTop="439dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_button_master"
            android:fontFamily="@font/convergence"
            android:padding="5dp"
            android:text="Medical first aid"
            android:textAllCaps="false"
            android:textColor="@color/text2"
            android:textSize="@dimen/text_size_button"
            tools:ignore="TouchTargetSizeCheck" />

        <include
        android:id="@+id/header_id"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="162dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_id"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="146dp"
            app:srcCompat="@drawable/fire2" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="162dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_id"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="394dp"
            app:srcCompat="@drawable/ambulancecar" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_id"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/convergence"
            android:text="Choose the branch"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_side_list_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_side_list"
        app:menu="@menu/side_list_navigation">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>