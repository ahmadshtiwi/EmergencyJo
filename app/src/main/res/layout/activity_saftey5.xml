<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".saftey5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/header_id"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="115dp"
                android:layout_height="104dp"
                android:layout_below="@+id/header_id"
                android:layout_alignParentStart="true"
                android:layout_marginStart="143dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@drawable/coma" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="453dp"
                android:layout_below="@+id/imageView9"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_description_box"
                android:orientation="vertical"
                android:paddingTop="11dp">


                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:text="تشمل الإسعافات الأولية التي يجب تقديمها للشخص المصاب بالإغماء على الخطوات الآتية:"
                    android:textColor="#FF0000"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/convergence"
                    android:gravity="center"
                    android:paddingTop="17dp"
                    android:text="1- مساعدة الشخص على الاستلقاء على ظهره إذا كان الشخص جالسًا على كرسي."
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/convergence"
                    android:gravity="center"
                    android:paddingTop="17dp"
                    android:text="2- دحرجة الشخص على الجانب في حال فقدانه للوعي، والتأكد من أنه يتنفس ومن نبضات القلب المنتظمة."
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/convergence"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingTop="17dp"
                    android:text="3- رفع قدمي الشخص أعلى من مستوى القلب بحوالي 30 سم إن أمكن لاستعادة تدفق الدم للدماغ."
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/convergence"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingTop="17dp"
                    android:text="4- فك الياقات والأحزمة وغيرها من الملابس الضيقة إذا كانت نوبة الإغماء ناتجة عن الحرارة، ومحاولة تبريد الشخص عن طريق مسحه بقطعة قماش مبللة أو تهويته."
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/convergence"
                    android:gravity="center"
                    android:paddingTop="17dp"
                    android:text="5- التأكد من وجود الكثير من الهواء النقي والطلب من الآخرين الابتعاد وفتح النافذة إذا كان الشخص في غرفة."
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/convergence"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingTop="17dp"
                    android:text="6- تقييم الشخص بحثًا عن أي إصابات محتملة أو كدمات في حال سقوطه."
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/convergence"
                    android:gravity="center"
                    android:paddingTop="17dp"
                    android:text="7- الاتصال برقم الطوارئ إذا لم يستعيد الشخص وعيه في غضون دقيقة واحدة."
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/convergence"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:text="ويجدر التنويه أنه في حال عدم تنفس الشخص المغمى عليه، يجب البدء في إجراء الإنعاش القلبي الرئوي والاتصال على الطوارئ فورًا، والاستمرار في إجراء الإنعاش القلبي الرئوي، حتى يستعيد الشخص تنفسه أو تصل المساعدة."
                    android:textColor="#FF0000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_side_list_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_side_list"
        app:menu="@menu/side_list_navigation">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>